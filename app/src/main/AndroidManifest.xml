<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotelkotapp"
        android:allowClearUserData="true"
        android:usesCleartextTraffic="true">
        <!-- Single Activity Model -->
        <activity
            android:name=".view.activities.ECartHomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name=".view.activities.APrioriResultActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">


        </activity> <!-- Splash Activity -->
        <activity
            android:name=".view.activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.DisplayTableActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize" >

        </activity>
        <activity
            android:name=".view.activities.Activity_Pos"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation|keyboardHidden|screenSize" >


        </activity>
        <activity
            android:name=".view.IP_Registration"
            android:configChanges="orientation|keyboardHidden|screenSize" >

        </activity>
        <activity
            android:name=".view.activities.Device_Registration"
            android:configChanges="orientation|keyboardHidden|screenSize" >

        </activity>
        <activity
            android:name=".view.activities.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >



        </activity>
        <activity
            android:name=".view.activities.ServiceSettingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >



        </activity>

        <activity
            android:name=".view.activities.RestaurantListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >
        </activity>
        <activity
            android:name=".view.activities.itemlistviewtable"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >
        </activity>
    </application>

</manifest>