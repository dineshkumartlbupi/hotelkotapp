<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFA500" />
            <gradient android:angle="-90" android:startColor="#FFA700" android:endColor="#FFA500" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFA500" />
            <solid android:color="#304FFE" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFA500" />
            <gradient android:angle="-90" android:startColor="#2962FF" android:endColor="#304FFE" />
        </shape>
    </item>
</selector>