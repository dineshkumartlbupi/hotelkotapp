<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="10dp"
        >
    <ImageView
        android:id="@+id/pullDown"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:background="@drawable/slide_down" />

        <TextView
            android:id="@+id/kotHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Table no 22"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans80"
        android:divider="@android:color/black"
        android:dividerHeight="0.5dp"
        android:groupIndicator="@drawable/expand_more"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorLeft"
        />

</LinearLayout>